                  {{else}}
                    <div class="m-article-card__picture lozad" style="background-image: url({{asset "images/no-image.png"}});">
                  {{/if}}
                  <a href="{{url}}" class="m-article-card__picture-link" aria-label="Tag"></a>
                  <h3 class="m-article-card__name">{{name}}</h3>
                  </div>
                  {{!--removed div with class "m-article-card__info"
                  
                  --}}
                  {{!--added this div with stats from "m-article-card__info" --}}
