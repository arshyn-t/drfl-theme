                      <span>
                        {{plural count.posts empty=(t "No posts") singular=(t "1 post") plural=(t "% posts")}}
                      </span>
                  </div>
                  {{!--/--}}
                </article>
              {{/foreach}}
            </div>
          {{/get}}

          {{!--Разделы Электронное участие, Право на справедливое судебное разбирательство онлайн--}}
