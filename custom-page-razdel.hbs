                      <span>
                        {{plural count.posts empty=(t "No posts") singular=(t "1 post") plural=(t "% posts")}}
                      </span>
                  </div>
                  {{!--/--}}
                </article>
              {{/foreach}}
            </div>
          {{/get}}
          <h2>Новые вызовы</h2>
          {{#get 'tags' limit='all' include='count.posts' order='id' filter="slug:[new-chalenges-business-and-human-rights]"}}
            <div class="l-grid left">
              {{#foreach tags}}
                <article class="m-article-card razdel">
